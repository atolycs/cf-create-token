{
  "name": "typescript-action-template",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "lint": "biome lint .",
    "format": "biome format --fix .",
    "package": "npm run format && npx esbuild --platform=node --bundle --outdir=dist src/index.ts src/post.ts"
  },
  "keywords": ["actions", "node", "setup"],
  "author": "Atolycs",
  "license": "MIT",
  "description": "My Github Action Template",
  "exports": {
    ".": "./dist/index.js"
  },
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@atolycs/biome-config": "^0.1.0",
    "@octokit/types": "^13.6.2",
    "@types/cloudflare": "^2.7.15",
    "@types/node": "^22.10.5",
    "esbuild": "^0.24.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "cloudflare": "^4.1.0"
  },
  "lint-staged": {
    "./src/**/*.ts": ["biome format --fix ."]
  }
}
